<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:R2CSharp.Lib.Views"
        x:Class="R2CSharp.Lib.Views.MainWindow"
        Icon="/Assets/icon.ico"
        Title="Reboot2Config"
        Background="{StaticResource MainWindowBackground}"
        CanResize="True"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome">
    <Grid Background="Transparent">
        <!-- Main Content -->
        <views:CarouselPageView Grid.Row="0" />
        
        <!-- Close Button Overlay -->
        <views:CloseButtonOverlay Grid.Row="0" ZIndex="1000" />
    </Grid>
</Window>