<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonia="https://github.com/projektanker/icons.avalonia"
        xmlns:local="clr-namespace:R2CSharp"
        xmlns:views="clr-namespace:R2CSharp.Views"
        x:Class="R2CSharp.Views.MainWindow"
        Icon="/Assets/icon.ico"
        Title="Reboot2Config"
        Background="#1E1E1E"
        CanResize="True"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Custom Title Bar -->
        <Border Grid.Row="0" Background="#1E1E1E" Name="TitleBar">
            <TextBlock Text="Reboot2Config" 
                       Foreground="White" 
                       VerticalAlignment="Center" 
                       TextAlignment="Center"
                       Margin="0,3,0,0"
                       FontWeight="SemiBold"
                       FontSize="18"/>
        </Border>
        
        <!-- Main Content -->
        <local:PageView Grid.Row="1" />
        
        <!-- Close Button Overlay -->
        <views:CloseButtonOverlay Grid.Row="1" ZIndex="1000" />
    </Grid>
</Window>